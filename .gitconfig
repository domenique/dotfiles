[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	st = status
	merge-log = "!f() { git log --stat \"$1^..$1\"; }; f"
	whatadded = log --diff-filter=A
	out = "!git fetch && git log --stat @{u}.."
	in = "!git fetch && git log --stat ..@{u}"

  	# Fancy logging.
  	#   h = head
  	#   hp = head with patch
  	#   r = recent commits, only current branch
  	#   ra = recent commits, all reachable refs
  	#   l = all commits, only current branch
  	#   la = all commits, all reachable refs
  	#   b = all branches
  	#   bs = all branches, sorted by last commit date
  	head = !git r -1
  	h = !git head
  	hp = "!. ~/.githelpers && show_git_head"
  	r = !GIT_NO_PAGER=1 git l -30
  	ra = !git r --all
	l = "!. ~/.githelpers && pretty_git_log"
	la = !git l --all
	b = "!. ~/.githelpers && pretty_git_branch"
	bs = "!. ~/.githelpers && pretty_git_branch_sorted"

	showtool = "!showci () { rev=$(git rev-parse \"${*:-HEAD}\"); git difftool $rev~1 $rev; }; showci"
	parent = "!git show-branch | grep '*' | grep -v \"$(git rev-parse --abbrev-ref HEAD)\" | head -n1 | sed 's/.*\\[\\(.*\\)\\].*/\\1/' | sed 's/[\\^~].*//' #"
	dth = difftool HEAD

[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true
[merge]
	tool = Kaleidoscope
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[mergetool]
	prompt = false
	keepBackup = false
[diff]
	tool = Kaleidoscope
[core]
	excludesfile = ~/.gitignore
	autocrlf = input
[pull]
	rebase = true
[branch "master"]
	mergeoptions = --no-ff
[branch "develop"]
	mergeoptions = --no-ff
[gpg]
	program = /usr/local/bin/gpg
[commit]
	gpgSign = false
[tag]
	forceSignAnnotated = false
